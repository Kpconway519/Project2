                <td><button type="button" class="btn btn-primary">Add</button></td>
            </tr>
            <tr>
                <td>Head Shave</td>
                <td>$25</td>
                <td><button type="button" class="btn btn-primary">Add</button></td>
            </tr>
            <tr>
                <td>Beard Lineup</td>
                <td>$15</td>
                <td><button type="button" class="btn btn-primary">Add</button></td>
            </tr>
        </tbody>
    </table>
</div>
    <!--End of Table-->
